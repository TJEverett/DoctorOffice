@{
  Layout="_Layout";
}

@model DoctorOffice.Models.Doctor;

<h2>Edit Details</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.DoctorId)

  @Html.LabelFor(model => model.NameFirst)
  @Html.EditorFor(model => model.NameFirst)

  @Html.LabelFor(model => model.NameLast)
  @Html.EditorFor(model => model.NameLast)

  @Html.LabelFor(model => model.Specialty)
  @Html.EditorFor(model => model.Specialty)

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to Doctors", "Index")</p>